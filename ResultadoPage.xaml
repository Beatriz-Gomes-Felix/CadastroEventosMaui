<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             ...
             BackgroundColor="#fffaf0"> <!-- cor creme -->

    <StackLayout Padding="20" Spacing="10">

        <Label Text="Resumo do Evento" 
               FontSize="26" 
               FontAttributes="Bold" 
               TextColor="#5a2a27" 
               HorizontalOptions="Center" />

        <Label Text="Nome: " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding Nome}" />

        <Label Text="Data Início: " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding DataInicio, StringFormat='{0:dd/MM/yyyy}'}" />

        <Label Text="Data Término: " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding DataTermino, StringFormat='{0:dd/MM/yyyy}'}" />

        <Label Text="Número de Participantes: " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding NumeroParticipantes}" />

        <Label Text="Local: " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding Local}" />

        <Label Text="Custo por Participante: " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding CustoPorParticipante, StringFormat='R$ {0:F2}'}" />

        <Label Text="Duração (dias): " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding Duracao}" />

        <Label Text="Custo Total: " FontAttributes="Bold" TextColor="#5a2a27" />
        <Label Text="{Binding CustoTotal, StringFormat='R$ {0:F2}'}" />

    </StackLayout>
</ContentPage>
